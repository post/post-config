{
  "name": "post-config",
  "version": "0.0.4-alpha.2",
  "description": "A create configuration for posthtml && postcss plugins",
  "license": "MIT",
  "repository": "post-org/post-config",
  "homepage": "post-org/post-config#readme",
  "bugs": "post-org/post-config/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore(changelog): Update changelog v`npm view post-config version`\"",
    "rc": "np prerelease --tag rc --any-branch",
    "beta": "np prerelease --tag beta --any-branch",
    "alpha": "np prerelease --tag alpha --any-branch",
    "patch": "np patch --any-branch",
    "minor": "np minor --any-branch",
    "major": "np major --any-branch",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel src/ -d lib/",
    "prepublish": "npm run build",
    "lintjs": "eslint ./src/*.js ./test/*.js",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "clinton && npm run lintjs && npm run lintmd",
    "test": "nyc ava",
    "update": "updtr",
    "testen": "testen -n -- ava"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "post",
    "HTML",
    "CSS",
    "PostHTML",
    "PostCSS",
    "Package",
    "Plugins",
    "Config",
    "Sequence",
    "Namespace"
  ],
  "dependencies": {
    "deepmerge": "^1.3.1"
  },
  "devDependencies": {
    "ava": "*",
    "ava-codemods": "^0.3.0",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-babili": "0.0.9",
    "babel-preset-env": "^1.1.4",
    "babel-register": "^6.16.0",
    "clinton": "^0.9.0",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-changelog-lint": "^1.0.0",
    "coveralls": "^2.11.14",
    "eslint": "^3.12.2",
    "eslint-config-xo": "^0.17.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-markdown": "^1.0.0-beta.2",
    "eslint-plugin-require-path-exists": "^1.1.5",
    "eslint-plugin-xo": "^1.0.0",
    "husky": "^0.12.0",
    "np": "^2.11.0",
    "nyc": "^10.0.0",
    "testen": "^1.8.2",
    "updtr": "^0.2.1",
    "xo": "0.17.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4"
          }
        }
      ],
      "babili"
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "require-path-exists",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  },
  "testen": {
    "node": [
      "7",
      "6",
      "5",
      "4"
    ]
  }
}
